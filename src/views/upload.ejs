  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/upload" class="active">Upload file</a>
    </div>

    <div class="upload-file-container">
      <h1>Handling File Uploads using Express.js and Multer</h1>
      <form
        method="POST"
        action="/upload/upload-profile-pic"
        enctype="multipart/form-data"
      >
        <div>
          <h3>Upload single file:</h3>
          <div>
            <label>First name:</label>
            <input name="name"  />
          </div>
          <div>
            <span>Upload your profile picture:</span>
            <input type="file" name="profile_pic" />
          </div>
          <div>
            <label>Price</label>
            <input name="price"  />
          </div>
          <div>
            <label>Sale</label>
            <input name="sale" />
          </div>
          <div>
            <label>Category</label>
            <input name="category" />
          </div>
        </div>
        <div>
          <button class="btn-save" type="submit">Upload</button>
        </div>
      </form>

      <hr />

